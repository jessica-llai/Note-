# open the directory - cd directory 
# check local storage in the directory - ls
# install nvm: 
//install 
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.1/install.sh | bash
source ~/.nvm/nvm.sh
nvm --version
nvm install v11.0.0
//update 
nvm use v11.0.0
//checking 
node -v
npm -v

# exit the failure to complile - control + c

# error msg regarding npm start 
npm install
npm install --ignore-scripts
npm audit fix
npm start

